<div class="task-form-container col-xs-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_area :details, class: "form-control" %>
    </div>
    <div class="form-inline">
      <%= f.check_box :completed, class: "form-control" %>
      <%= f.label :completed %>
    </div>
    <hr>

    <%= f.submit class: "btn btn-primary" %>
    <%= link_to tasks_path do %>
      <button class="red-link btn btn-danger"><i class="fas fa-times-circle"></i> Cancel</button>
    <% end %>

  <% end %>
</div>
